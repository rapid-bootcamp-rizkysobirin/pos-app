@model POS.ViewModel.OrderDetailModel

@{
    ViewData["Title"] = "OrderDetail Detail";
}

<h2>OrderDetail Detail</h2>
<table class="table tab-content">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Order</th>
            <td>@Model.OrderId</td>
        </tr>
        <tr>
            <th>Product</th>
            <td>@Model.ProductId</td>
        </tr>
        <tr>
            <th>Unit Price</th>
            <td>@Model.UnitPrice</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>@Model.Quantity</td>
        </tr>
        <tr>
            <th>Discount</th>
            <td>@Model.Discount</td>
        </tr>
    </tbody>
</table>
