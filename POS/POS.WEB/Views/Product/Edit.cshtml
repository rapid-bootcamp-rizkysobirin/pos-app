@model POS.ViewModel.ProductModel

@{
    ViewData["Title"] = "Product Edit";
}

<h2>Edit Product</h2>
<form asp-controller="Product" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplierId">Supplier Id</label>
        @*<select asp-for="SupplierId" class="form-control">
            <option selected>Select the Supplier</option>
            <option value=1>Supplier 1</option>
            <option value=2>Supplier 2</option>
            <option value=3>Supplier 3</option>
            <option value=4>Supplier 4</option>
            <option value=5>Supplier 5</option>
        </select>*@
        <select type="text" class="form-control" asp-for="SupplierId" asp-items="@ViewBag.Suppliers">
            <option selected>Select Supplier</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category Id</label>
        @*<select asp-for="CategoryId" class="form-control">
            <option selected>Select the Category</option>
            <option value=1>Category 1</option>
            <option value=2>Category 2</option>
            <option value=3>Category 3</option>
            <option value=4>Category 4</option>
            <option value=5>Category 5</option>
        </select>*@
        <select type="text" class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
            <option selected>Select Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice">Unit Price</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitInStock">Unit In Stock</label>
        <input asp-for="UnitInStock" class="form-control" />
        <span asp-validation-for="UnitInStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitInOrder">Unit In Order</label>
        <input asp-for="UnitInOrder" class="form-control" />
        <span asp-validation-for="UnitInOrder" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReorderLevel">Reorder Level</label>
        <input asp-for="ReorderLevel" class="form-control" />
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Discontinued" type="checkbox">
        <label asp-for="Discontinued" class="custom-control-label">Discontinued</label>

    </div>

    <div class="pt-2 pb-2">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>

</form>